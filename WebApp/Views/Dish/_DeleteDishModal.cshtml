@model DishViewModel

<form method="post" asp-action="Delete" id="form">
	<partial name="Partials/_ModalHeader" model='"Delete dish"' />

	<div class="modal-body" id="modalBody">

		@if (@TempData["Error"] != null)
		{
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		}
		<input asp-for="DishId" type="hidden" />

		<h3 class="mb-3">Are you sure you want to delete this dish?</h3>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.DishId)</dt>
			<dd>@Model.DishId</dd>

			<dt>@Html.DisplayNameFor(m => m.DishName)</dt>
			<dd>@Model.DishName</dd>

			<dt>@Html.DisplayNameFor(m => m.Price)</dt>
			<dd>@Model.Price</dd>

			<dt>@Html.DisplayNameFor(m => m.Description)</dt>
			<dd>@Model.Description</dd>

			<dt>@Html.DisplayNameFor(m => m.CategoryName)</dt>
			<dd>@Model.CategoryName</dd>

			<dt>@Html.DisplayNameFor(m => m.Visible)</dt>
			<dd>@Model.Visible</dd>

			@if (!string.IsNullOrEmpty(Model.ImagePath))
			{
				<div class="mb-3">
					<img src="@Model.ImagePath" alt="@Model.DishName" class="img-thumbnail" style="max-width: 200px;" />
				</div>
			}
		</dl>
	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>