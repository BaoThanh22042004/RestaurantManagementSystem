@model WebApp.Models.TableViewModel
@{
    ViewData["Title"] = "Edit Table";
    Layout = "_DashboardLayout";
}

<h1 class="mb-4">Edit Table</h1>

<div class="text-danger mb-3">@TempData["Error"]</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TableId" />

    <div class="mb-3">
        <label asp-for="TableName" class="form-label"></label>
        <input asp-for="TableName" class="form-control" />
        <span asp-validation-for="TableName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="">-- Select Status --</option>
            @foreach (var status in Enum.GetValues(typeof(Models.Entities.TableStatus)))
            {
                <option value="@status">@status</option>
            }
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ResTime" class="form-label"></label>
        <input asp-for="ResTime" class="form-control" type="time" />
        <span asp-validation-for="ResTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="d-flex gap-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
