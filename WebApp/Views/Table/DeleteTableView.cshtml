@model TableViewModel

@{
    ViewData["Title"] = "Delete Table";
    Layout = "_DashboardLayout";
}

<h1 class="mb-4">Delete Table</h1>
<h2>Are you sure you want to delete the following table?</h2>

<div class="text-danger mb-3">@TempData["Error"]</div>

<div>
    <strong>Table Name:</strong> @Model.TableName <br />
    <strong>Capacity:</strong> @Model.Capacity <br />
    <strong>Status:</strong> @Model.Status.ToString() <br />
    <strong>Reservation Time:</strong> @(Model.ResTime.HasValue ? Model.ResTime.Value.ToString() : "None") <br />
    <strong>Notes:</strong> @(string.IsNullOrEmpty(Model.Notes) ? "None" : Model.Notes) <br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TableId" />

    <div class="d-flex gap-3 mt-4">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
