@model TableViewModel

<form method="post" asp-action="Create" id="form">
	<partial name="Partials/_ModalHeader" model='"Create Table"' />

	<div class="modal-body" id="modalBody">

		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<div class="form-floating mb-3">
			<input asp-for="TableName" class="form-control"/>
			<label asp-for="TableName"></label>
			<span asp-validation-for="TableName" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Capacity" class="form-control" type="number" min="1" />
			<label asp-for="Capacity"></label>
			<span asp-validation-for="Capacity" class="text-danger"></span>
		</div>

	</div>

	@{
		string createButton = "<button type='submit' class='btn btn-primary'>Create</button>";
	}

	<partial name="Partials/_ModalFooter" model='@createButton' />
</form>
