@model WebApp.Models.TableViewModel

@{
    ViewData["Title"] = "Table Details";
    Layout = "_DashboardLayout";
}

<h1 class="mb-4">Table Details</h1>

<div class="mb-3">
    <strong>Table Name:</strong> @Model.TableName
</div>

<div class="mb-3">
    <strong>Capacity:</strong> @Model.Capacity
</div>

<div class="mb-3">
    <strong>Status:</strong> @Model.Status
</div>

<div class="mb-3">
    <strong>Reservation Time:</strong> @(Model.ResTime.HasValue ? Model.ResTime.Value.ToString("hh:mm tt") : "N/A")
</div>

<div class="mb-3">
    <strong>Notes:</strong> @(string.IsNullOrEmpty(Model.Notes) ? "None" : Model.Notes)
</div>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Order" asp-route-tableId="@Model.TableId" class="btn btn-primary">Create Order</a>
</div>

<div class="d-flex gap-3">
    <a asp-action="Edit" asp-route-id="@Model.TableId" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.TableId" class="btn btn-danger btn-sm">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
