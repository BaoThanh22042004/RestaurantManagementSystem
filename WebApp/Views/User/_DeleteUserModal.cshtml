@model UserViewModel

<form method="post" asp-action="Delete" id="form">
	<partial name="Partials/_ModalHeader" model='"Delete User"' />

	<div class="modal-body" id="modalBody">

		@if (@TempData["Error"] != null)
		{
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		}
		<input asp-for="UserId" type="hidden" />

		<h3 class="mb-3">Are you sure you want to delete this account?</h3>

		<dl>

			<dt>@Html.DisplayNameFor(m => m.UserId)</dt>
			<dd>@Model.UserId</dd>

			<dt>@Html.DisplayNameFor(m => m.Username)</dt>
			<dd>@Model.Username</dd>

			<dt>@Html.DisplayNameFor(m => m.FullName)</dt>
			<dd>@Model.FullName</dd>

			<dt>@Html.DisplayNameFor(m => m.Role)</dt>
			<dd>@Model.Role</dd>

		</dl>
	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>