@model IEnumerable<UserViewModel>
@{
	ViewData["Title"] = "User";
	Layout = "_DashboardLayout";
	int counter = 0;
}

<h1 class="mb-4">User</h1>

<div class="mb-3">
	<a asp-action="Create" class="btn btn-success">Add New User</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Username)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FullName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Role)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@(++counter)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Username)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FullName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Role)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">Details</a>
					<a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-primary">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>