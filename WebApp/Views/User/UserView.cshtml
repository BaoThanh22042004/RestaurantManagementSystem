@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "User";
    Layout = "_DashboardLayout";
    int counter = 0;
}

<h1 class="mb-4 text-center">User Management</h1>

<div class="mb-3 d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-success">Add New User</a>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <h2>No users available.</h2>
        <p>Please add some users.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(++counter)</td>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td class="d-flex justify-content-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
