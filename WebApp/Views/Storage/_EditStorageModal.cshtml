@model StorageViewModel

<form method="post" asp-action="Edit" id="form">
	<partial name="Partials/_ModalHeader" model='"Edit Item"' />

	<div class="modal-body" id="modalBody">

		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<input asp-for="ItemId" type="hidden" />
		<input asp-for="Quantity" type="hidden" />

		<div class="form-floating mb-3">
			<input asp-for="ItemName" class="form-control" id="ItemName" />
			<label asp-for="ItemName">Item Name</label>
			<span asp-validation-for="ItemName" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Unit" class="form-control" id="Unit" />
			<label asp-for="Unit">Unit</label>
			<span asp-validation-for="Unit" class="text-danger"></span>
		</div>

	</div>
	@{
		string saveButton = "<button type='submit' class='btn btn-primary'>Save</button>";
	}

	<partial name="Partials/_ModalFooter" model='@saveButton' />
</form>	