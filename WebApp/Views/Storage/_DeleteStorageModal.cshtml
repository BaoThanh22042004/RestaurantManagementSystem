@model StorageViewModel

<form method="post" asp-action="Delete" id="form">
	<partial name="Partials/_ModalHeader" model='"Delete Item"' />

	<div class="modal-body" id="modalBody">

		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<input asp-for="ItemId" type="hidden" />

		<h4 class="mb-3">Are you sure you want to delete this account?</h4>

		<dl class="row">

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.ItemId)</dt>
			<dd class="col-sm-8">@Model.ItemId</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.ItemName)</dt>
			<dd class="col-sm-8">@Model.ItemName</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.Unit)</dt>
			<dd class="col-sm-8">@Model.Unit</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.Quantity)</dt>
			<dd class="col-sm-8">@Model.Quantity</dd>
		</dl>

	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>