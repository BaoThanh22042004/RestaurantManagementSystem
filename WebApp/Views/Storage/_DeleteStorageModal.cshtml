@model StorageViewModel

<form method="post" asp-action="Delete" id="form">
	<partial name="Partials/_ModalHeader" model='"Delete Dish Category"' />

	<div class="modal-body" id="modalBody">

		@if (@TempData["Error"] != null)
		{
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		}
		<input asp-for="ItemId" type="hidden" />

		<h3 class="mb-3">Are you sure you want to delete this account?</h3>

		<dl>

			<dt>@Html.DisplayNameFor(m => m.ItemId)</dt>
			<dd>@Model.ItemId</dd>

			<dt>@Html.DisplayNameFor(m => m.ItemName)</dt>
			<dd>@Model.ItemName</dd>

			<dt>@Html.DisplayNameFor(m => m.Unit)</dt>
			<dd>@Model.Unit</dd>

			<dt>@Html.DisplayNameFor(m => m.Quantity)</dt>
			<dd>@Model.Quantity</dd>
		</dl>

	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>