@model IEnumerable<ReservationViewModel>
@{
    ViewData["Title"] = "Reservation";
    Layout = "_DashBoardLayout";
}
<h1 class="mb-4">Reservation</h1>
<a asp-action="Create" class="btn btn-primary">Add New Reservation</a>

<div class="mb-4">

    @if (!Model.Any())
    {
        <div class="no-reservations-message text-center mt-5">
            <h2>No reservations available.</h2>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ResId)
                    </th>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PartySize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepositAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.ResId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.Customer.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.Customer.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.PartySize)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.ResDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.ResTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.DepositAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => reservation.Notes)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@reservation.ResId" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@reservation.ResId" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@reservation.ResId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
