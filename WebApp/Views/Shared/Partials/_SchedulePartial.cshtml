@model ScheduleViewModel

<div class="form-floating mb-3">
    <input asp-for="ScheId" class="form-control" id="ScheId" />
    <label asp-for="ScheId"></label>
</div>

<div class="form-floating mb-3">
    <input asp-for="ScheDate" type="date" class="form-control" id="ScheDate" />
    <label asp-for="ScheDate"></label>
    <span asp-validation-for="ScheDate" class="text-danger"></span>
</div>

<div class="form-floating mb-3">
    <select asp-for="EmpId" asp-items="Model.EmployeeOptions" class="form-select" id="EmpId">
        <option selected id="DefaultSelectEmpId">Please select Employee</option>
    </select>
    <label asp-for="EmpId"></label>
    <span asp-validation-for="EmpId" class="text-danger"></span>
</div>

<div class="form-floating mb-3">
    <select asp-for="ShiftId" asp-items="Model.ShiftOptions" class="form-select" id="ShiftId">
        <option selected id="DefaultSelectShiftId">Please select Shift</option>
    </select>
    <label asp-for="ShiftId"></label>
    <span asp-validation-for="ShiftId" class="text-danger"></span>
</div>

@switch (ViewData["Title"] as string)
{
    case "Create Schedule":
        <script>
            document.getElementById("ScheId").closest("div").remove();
            document.getElementById("ScheDate").valueAsDate = new Date();
        </script>
        break;

    case "Edit Schedule":
        <script>
            document.getElementById("ScheId").setAttribute("readonly", true);
            document.getElementById("DefaultSelectEmpId").remove();
            document.getElementById("DefaultSelectShiftId").remove();
        </script>
        break;

    case "Details Schedule":
    case "Delete Schedule":
        <script>
            for (let input of document.getElementsByTagName("input")) {
                input.setAttribute("disabled", true);
            }
            document.getElementById("EmpId").setAttribute("disabled", true);
            document.getElementById("ShiftId").setAttribute("disabled", true);
            document.getElementById("DefaultSelectEmpId").remove();
            document.getElementById("DefaultSelectShiftId").remove();
        </script>
        break;
}
