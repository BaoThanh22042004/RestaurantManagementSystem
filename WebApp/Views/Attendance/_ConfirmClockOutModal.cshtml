@model ScheduleViewModel

<form method="post" asp-controller="Attendance" asp-action="RecordOut" id="form">
	<partial name="Partials/_ModalHeader" model='"Clock Out"'/>

	<div class="modal-body" id="modalBody">
		<input name="ScheId" value="@Model.ScheId" type="hidden" />
		<h3>Are you sure you want to clock out?</h3>

		@if (@TempData["Error"] != null)
		{
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		}

		<dl>
			<dt>Schedule Date</dt>
			<dd>@Model.ScheDate</dd>
			<dt>Shift Name</dt>
			<dd>@Model.ShiftName (@Model.StartTime - @Model.EndTime)</dd>
		</dl>
	</div>

	@{
		string clockOutButton = "<button type='submit' class='btn btn-primary'>Clock Out</button>";
	}

	<partial name="Partials/_ModalFooter" model='@clockOutButton' />
</form>