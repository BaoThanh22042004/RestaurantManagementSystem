@model PayrollViewModel

<form id="form">
    <partial name="Partials/_ModalHeader" model='"Payroll Details"' />

    <div class="modal-body" id="modalBody">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }

        <div class="form-floating mb-3">
            <input asp-for="PayrollId" class="form-control" id="PayrollId" disabled />
            <label asp-for="PayrollId"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="CreatedBy" class="form-control" id="CreatedBy" disabled />
            <label asp-for="CreatedBy"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="CreatedAt" class="form-control" id="CreatedAt" type="datetime-local" disabled />
            <label asp-for="CreatedAt"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="EmpId" class="form-control" id="EmpId" disabled />
            <label asp-for="EmpId"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Month" class="form-control" id="Month" type="number" min="1" max="12" disabled />
            <label asp-for="Month"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Year" class="form-control" id="Year" type="number" min="1900" max="9999" disabled />
            <label asp-for="Year"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="WorkingHours" class="form-control" id="WorkingHours" type="number" step="0.01" disabled />
            <label asp-for="WorkingHours"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Salary" class="form-control" id="Salary" type="number" step="0.01" disabled />
            <label asp-for="Salary"></label>
        </div>

        <div class="form-floating mb-3">
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<Models.Entities.PayrollStatus>()" id="Status" disabled>
                <option selected>Select Status</option>
            </select>
            <label asp-for="Status"></label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="PaymentDate" class="form-control" id="PaymentDate" type="date" disabled />
            <label asp-for="PaymentDate"></label>
        </div>
    </div>



    <partial name="Partials/_ModalFooter" model='""' />
</form>
