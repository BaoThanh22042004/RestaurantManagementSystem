@model WebApp.Models.PayrollViewModel

<h2>Payroll Details</h2>

<div>
    <h4>Payroll</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Payroll ID</dt>
        <dd class="col-sm-10">@Model.PayrollId</dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Model.CreatedBy</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt?.ToString("g")</dd>

        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@Model.EmpId</dd>

        <dt class="col-sm-2">Month</dt>
        <dd class="col-sm-10">@Model.Month</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Working Hours</dt>
        <dd class="col-sm-10">@Model.WorkingHours</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@Model.PaymentDate?.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.PayrollId" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.PayrollId" class="btn btn-danger">Delete</a>
</div>
