@model PayrollViewModel

<form method="post" asp-action="Create" id="form">
	<partial name="Partials/_ModalHeader" model='"Create Payroll"' />

	<div class="modal-body" id="modalBody">
		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<div class="form-floating mb-3">
			<select asp-for="EmpId" class="form-select" id="EmpId" required>
				<option value="">Select Employee</option>
				@if (Model.EmployeeList != null && Model.EmployeeList.Any())
				{
					foreach (var employee in Model.EmployeeList)
					{
						<option value="@employee.Value">@employee.Text</option>
					}
				}
				else
				{
					<option value="">No employees available</option>
				}
			</select>
			<label asp-for="EmpId">Employee</label>
			<span asp-validation-for="EmpId" class="text-danger"></span>
		</div>


		<div class="form-floating mb-3">
			<input asp-for="Month" class="form-control" id="Month" type="number" min="1" max="12" required />
			<label asp-for="Month">Month</label>
			<span asp-validation-for="Month" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Year" class="form-control" id="Year" type="number" required />
			<label asp-for="Year">Year</label>
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="WorkingHours" class="form-control" id="WorkingHours" type="number" step="0.01" required />
			<label asp-for="WorkingHours">Working Hours</label>
			<span asp-validation-for="WorkingHours" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Salary" class="form-control" id="Salary" type="number" step="0.01" required />
			<label asp-for="Salary">Salary</label>
			<span asp-validation-for="Salary" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="PaymentDate" class="form-control" type="date" id="PaymentDate" />
			<label asp-for="PaymentDate">Payment Date</label>
			<span asp-validation-for="PaymentDate" class="text-danger"></span>
		</div>
	</div>

	@{
		string createButton = "<button type='submit' class='btn btn-primary'>Create</button>";
	}

	<partial name="Partials/_ModalFooter" model="@createButton" />
</form>
