@model Contact

<form method="post" asp-action="Contact" id="form">
	<partial name="Partials/_ModalHeader" model='"Edit Contact"' />

	<div class="modal-body" id="modalBody">
		<div class="form-floating mb-3">
			<textarea asp-for="CTA" class="form-control"></textarea>
			<label asp-for="CTA"></label>
			<span asp-validation-for="CTA" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<div class="input-group">
				<span class="input-group-text"><i class="bi bi-geo-alt-fill text-danger"></i></span>
				<div class="form-floating">
					<input asp-for="Address" class="form-control" />
					<label asp-for="Address"></label>
				</div>
			</div>
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<div class="input-group">
				<span class="input-group-text"><i class="bi bi-telephone-fill text-success"></i></span>
				<div class="form-floating">
					<input asp-for="Phone" class="form-control" />
					<label asp-for="Phone"></label>
				</div>
			</div>
			<span asp-validation-for="Phone" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<div class="input-group">
				<span class="input-group-text"><i class="bi bi-envelope-fill text-info"></i></span>
				<div class="form-floating">
					<input asp-for="Email" class="form-control" />
					<label asp-for="Email"></label>
				</div>
			</div>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

	</div>

	@{
		string saveButton = "<button type='submit' class='btn btn-primary'>Save</button>";
	}

	<partial name="Partials/_ModalFooter" model='@saveButton' />
</form>
