@model InformationViewModel

<form method="post" asp-action="RestaurantName" id="form">
	<partial name="Partials/_ModalHeader" model='"Edit Restaurant Name"' />

	<div class="modal-body" id="modalBody">
		<div class="form-floating mb-3">
			<input asp-for="RestaurantName" class="form-control" />
			<label asp-for="RestaurantName">Restaurant Name</label>
			<span asp-validation-for="RestaurantName" class="text-danger"></span>
		</div>
	</div>

	@{
		string saveButton = "<button type='submit' class='btn btn-primary'>Save</button>";
	}

	<partial name="Partials/_ModalFooter" model='@saveButton' />
</form>
