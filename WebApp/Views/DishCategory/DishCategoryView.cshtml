@model IEnumerable<DishCategoryViewModel>
@{
    ViewData["Title"] = "Dish Category";
    Layout = "_DashBoardLayout";
}

<h1 class="mb-4 text-center">Dish Categories</h1>

<div class="container">
    <div class="mb-4 card p-4 shadow-sm">
        <form class="d-flex justify-content-between align-items-center" method="get">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Dish Category
            </a>
            <div class="d-flex">
                <input class="form-control me-2" name="keyword" type="search" value="@Context.Request.Query["keyword"]" placeholder="Search by name..." />
                <button class="btn btn-outline-success" type="submit" formaction="@Url.Action("Search")">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>

        @if (!Model.Any())
        {
            <div class="no-dishes-message text-center mt-5">
                <h2 class="text-muted">No dish categories available.</h2>
                <a asp-controller="DishCategory" asp-action="Index" class="btn btn-secondary mt-3">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        }
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive card p-4 shadow-sm mt-4">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
                        <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td class="d-flex justify-content-end">
                                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm me-2">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
