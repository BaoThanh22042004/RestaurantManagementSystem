@model DishCategoryViewModel

<form method="post" asp-action="Create" id="form">
	<partial name="Partials/_ModalHeader" model='"Create Dish Category"' />

	<div class="modal-body" id="modalBody">

		@if (@TempData["Error"] != null)
		{
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		}
		<div class="form-floating mb-3">
			<input asp-for="CategoryName" class="form-control" id="CategoryName" />
			<label asp-for="CategoryName">Category Name</label>
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>
	</div>

	@{
		string createButton = "<button type='submit' class='btn btn-primary'>Create</button>";
	}

	<partial name="Partials/_ModalFooter" model='@createButton' />
</form>