@model DishCategoryViewModel

<form method="post" asp-action="Delete" id="form">
	<partial name="Partials/_ModalHeader" model='"Delete Dish Category"' />

	<div class="modal-body" id="modalBody">

		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />
		<input asp-for="CategoryId" type="hidden" />

		<h4 class="mb-3">Are you sure you want to delete this account?</h4>

		<dl>

			<dt>@Html.DisplayNameFor(m => m.CategoryId)</dt>
			<dd>@Model.CategoryId</dd>

			<dt>@Html.DisplayNameFor(m => m.CategoryName)</dt>
			<dd>@Model.CategoryName</dd>
		</dl>
	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>