@model StorageLogViewModel
@{
    ViewData["Title"] = "Cancel Storage Log";
    Layout = "_DashboardLayout";
}

<h1 class="mb-4">Cancel Storage Log</h1>

<h2 class="mb-3">Are you sure you want to cancel this log?</h2>

<div class="text-danger mb-3">@TempData["Error"]</div>

<div class="d-flex gap-3">
    @if (!Model.Action.Equals(Models.Entities.Action.Cancel))
    {
        <form asp-action="Cancel" method="post">
            <input type="hidden" asp-for="LogId" />
            <button type="submit" class="btn btn-danger">Cancel</button>
        </form>
    }
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>