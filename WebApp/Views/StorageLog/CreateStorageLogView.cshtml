@model StorageLogViewModel
@{
    ViewData["Title"] = "Create Storage Log";
    Layout = "_DashBoardLayout";
}
<h1 class="mb-4">Create Storage Log</h1>

<div class="text-danger mb-3">@TempData["Error"]</div>

<form asp-action="Create" method="post">
    <div class="form-floating mb-3">
        <select asp-for="ItemId" asp-items="Model.Items" class="form-select" id="ItemId">
            <option selected id="DefaultSelect">Select an item</option>
        </select>
        <label asp-for="ItemId"></label>
        <span asp-validation-for="ItemId" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="ChangeQuantity" class="form-control" id="ChangeQuantity" />
        <label asp-for="ChangeQuantity"></label>
        <span asp-validation-for="ChangeQuantity" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <select asp-for="Action" class="form-select" id="Action">
            <option value="@Models.Entities.Action.Import">@nameof(Models.Entities.Action.Import)</option>
            <option value="@Models.Entities.Action.Export">@nameof(Models.Entities.Action.Export)</option>
        </select>
        <label asp-for="Action"></label>
        <span asp-validation-for="Action" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Cost" class="form-control" id="Cost" />
        <label asp-for="Cost"></label>
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <textarea asp-for="Description" class="form-control" id="Description" style="height: 100px;"></textarea>
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="d-flex gap-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
