@model StorageLogViewModel
@{
    ViewData["Title"] = "Details Storage Log";
    Layout = "_DashboardLayout";
}

<h1 class="mb-4">Details Storage Log</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                Item ID
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ItemId)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ItemName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ItemName)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Action)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Action)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ChangeQuantity)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ChangeQuantity)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RemainQuantity)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.RemainQuantity)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreatorName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreatorName)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Cost)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Cost)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>

    <div class="d-flex gap-3">

        @if (!Model.Action.Equals(Models.Entities.Action.Cancel))
        {
            <a asp-action="Cancel" asp-route-id="@Model.LogId" class="btn btn-danger">Cancel</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
