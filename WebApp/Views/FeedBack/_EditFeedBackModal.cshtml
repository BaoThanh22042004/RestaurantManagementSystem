@using Models.Entities
@model WebApp.Models.FeedBackViewModel

<form method="post" asp-action="Edit" id="form">
	<partial name="Partials/_ModalHeader" model='"Edit Feedback"' />

	<div class="modal-body" id="modalBody">

		@if (@TempData["Error"] != null)
		{
			<div class="alert alert-danger" role="alert">
				@TempData["Error"]
			</div>
		}

		<div class="form-floating mb-3">
			<input asp-for="FeedbackId" type="hidden" />
			<input asp-for="FeedbackId" class="form-control" disabled />
			<label asp-for="FeedbackId"></label>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="CreateAt" class="form-control" disabled />
			<label asp-for="CreateAt"></label>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="FullName" class="form-control" disabled />
			<label asp-for="FullName"></label>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Email" class="form-control" disabled />
			<label asp-for="Email"></label>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Phone" class="form-control" disabled />
			<label asp-for="Phone"></label>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Subject" class="form-control" disabled />
			<label asp-for="Subject"></label>
		</div>

		<div class="form-floating mb-3">
			<textarea asp-for="Body" class="form-control" rows="5" disabled></textarea>
			<label asp-for="Body"></label>
		</div>

		<div class="form-floating mb-3">
			<select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<FeedBackStatus>()">
				<option selected id="DefaultSelectStatus">Please select status</option>
			</select>
			<label asp-for="Status"></label>
			<span asp-validation-for="Status" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<textarea asp-for="Note" class="form-control" rows="5" placeholder="Notes"></textarea>
			<label asp-for="Note"></label>
			<span asp-validation-for="Note" class="text-danger"></span>
		</div>

	</div>

	@{
		string saveButton = "<button type='submit' class='btn btn-primary'>Save Changes</button>";
	}

	<partial name="Partials/_ModalFooter" model='@saveButton' />
</form>
