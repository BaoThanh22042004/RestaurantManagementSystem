@model WebApp.Models.FeedBackViewModel

<h2>Delete Feedback</h2>

<div>
    <h4>Are you sure you want to delete this feedback?</h4>
    <dl class="row">
        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.CustomerId</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.Subject</dd>

        <dt class="col-sm-2">Body</dt>
        <dd class="col-sm-10">@Model.Body</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreateAt</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="FeedbackId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
