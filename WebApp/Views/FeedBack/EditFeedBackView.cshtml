@using Models.Entities
@model WebApp.Models.FeedBackViewModel

@{
	Layout = "_DashboardLayout";
}

<h2>Edit Feedback</h2>

<hr />

@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">
		@TempData["Error"]
	</div>
}

<form asp-action="Edit">
	<dl class="row my-3">
		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.FeedbackId)</dt>
		<dd class="col-sm-10">@Model.FeedbackId</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.CreateAt)</dt>
		<dd class="col-sm-10">@Model.CreateAt</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.FullName)</dt>
		<dd class="col-sm-10">@Model.FullName</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
		<dd class="col-sm-10">@Model.Email</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.Phone)</dt>
		<dd class="col-sm-10">@Model.Phone</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.Subject)</dt>
		<dd class="col-sm-10">@Model.Subject</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(m => m.Body)</dt>
		<dd class="col-sm-10">@Model.Body</dd>
	</dl>

	<input asp-for="FeedbackId" type="hidden" />

	<div class="mb-3">
		<label asp-for="Status" class="control-label"></label>
		<select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FeedBackStatus>()"></select>
		<span asp-validation-for="Status" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Note" class="control-label"></label>
		<textarea asp-for="Note" class="form-control" rows="5" placeholder="Notes"></textarea>
		<span asp-validation-for="Note" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Save Changes</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

