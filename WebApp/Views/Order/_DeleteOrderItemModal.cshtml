@model OrderItemViewModel

<form method="post" asp-action="DeleteOrderItem" id="form">

	<partial name="Partials/_ModalHeader" model='"Delete Order Item"' />
	<div class="modal-body" id="modalBody">
		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<input name="orderItemId" value="@Model.OrItemId" type="hidden" />

		<h4>Are you sure you want to delete this order item?</h4>

		<dl class="row">
			<dt class="col-sm-4">Order Item ID</dt>
			<dd class="col-sm-8">@Model.OrItemId</dd>

			<dt class="col-sm-4">Dish Name</dt>
			<dd class="col-sm-8">@Model.Dish?.DishName</dd>

			<dt class="col-sm-4">Quantity</dt>
			<dd class="col-sm-8">@Model.Quantity</dd>

			<dt class="col-sm-4">Price</dt>
			<dd class="col-sm-8">@Model.Price?.ToString("C")</dd>

			<dt class="col-sm-4">Status</dt>
			<dd class="col-sm-8">@Model.Status</dd>

			<dt class="col-sm-4">Notes</dt>
			<dd class="col-sm-8">@(Model.Notes ?? "None")</dd>
		</dl>
	</div>

	@{
		string Button = $"<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='Button' />
</form>
