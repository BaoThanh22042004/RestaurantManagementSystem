@model OrderViewModel

<form method="post" asp-action="Create" id="form">

    <partial name="Partials/_ModalHeader" model='"Create Order"' />

    <div class="modal-body" id="modalBody">
        @if (@TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }

        <div class="form-floating mb-3">
            <input asp-for="TableId" class="form-control" id="TableId" readonly />
            <label asp-for="TableId">Table</label>
            <span asp-validation-for="TableId" class="text-danger"></span>
        </div>
    </div>

    @* *@
    @{
        string createButton = "<button type='submit' class='btn btn-primary'>Create Order</button>";
    }

    <partial name="Partials/_ModalFooter" model='@createButton' />
</form>
