@model ScheduleViewModel

<form method="post" asp-action="Delete" id="form">

	<partial name="Partials/_ModalHeader" model='"Delete Schedule"' />

	<div class="modal-body" id="modalBody">

		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<input asp-for="ScheId" type="hidden" />

		<h3 class="mb-3">Are you sure you want to delete this schedule?</h3>

		<dl class="row">

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.ScheId)</dt>
			<dd class="col-sm-8">@Model.ScheId</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.ScheDate)</dt>
			<dd class="col-sm-8">@Model.ScheDate</dd>

			<dt class="col-sm-4">Employee Name</dt>
			<dd class="col-sm-8">@Model.EmployeeName</dd>

			<dt class="col-sm-4">Shift Name</dt>
			<dd class="col-sm-8">@Model.ShiftName (@Model.StartTime - @Model.EndTime)</dd>

		</dl>
	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>
