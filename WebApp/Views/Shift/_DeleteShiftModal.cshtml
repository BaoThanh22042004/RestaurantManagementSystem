@model ShiftViewModel

<form method="post" asp-action="Delete" id="form">
    <partial name="Partials/_ModalHeader" model='"Delete Shift"' />

	<div class="modal-body" id="modalBody">

		<partial name="Partials/_AlertDanger" model="@TempData["Error"]" />

		<input asp-for="ShiftId" type="hidden" />

		<h4 class="mb-3">Are you sure you want to delete this shift?</h4>

		<dl class="row">

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.ShiftId)</dt>
			<dd class="col-sm-8">@Model.ShiftId</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.ShiftName)</dt>
			<dd class="col-sm-8">@Model.ShiftName</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.StartTime)</dt>
			<dd class="col-sm-8">@Model.StartTime</dd>

			<dt class="col-sm-4">@Html.DisplayNameFor(m => m.EndTime)</dt>
			<dd class="col-sm-8">@Model.EndTime</dd>

		</dl>
	</div>

	@{
		string deleteButton = "<button type='submit' class='btn btn-danger'>Delete</button>";
	}

	<partial name="Partials/_ModalFooter" model='@deleteButton' />
</form>